    .col-sm-10
      %input.form-control#pass(name = "address" placeholder = "Address" type = "text" maxlength="25" size="40" )
  .form-group
    %label.col-sm-2.control-label(for = "gender")Gender
    .col-sm-10
      %input.form-control#pass(name = "gender" placeholder = "Gender" type = "gender" maxlength="25" size="40" )
