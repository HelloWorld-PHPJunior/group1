- foreach ($user->getErrors() as $field => $errors)
  %ul
    %li Поле
    =$field
    - foreach ($errors as $error)
    %li= $error

%form.form-horizontal(role="form" action="#{$this->createUrl('auth/signup')}" method="post")
  .form-group
    %label.col-sm-2.control-label(for = "name")Your name
    .col-sm-10
      %input.form-control#email(name="User[first_name]" placeholder = "Your name" type = "text" maxlength="40" size = "40")
  .form-group
    %label.col-sm-2.control-label(for = "lastname")Your last name
    .col-sm-10
      %input.form-control#pass(name = "User[last_name]" placeholder = "Password" type = "text" maxlength="25" size="40" )
  .form-group
    %label.col-sm-2.control-label(for = "nickname")Your nickname
    .col-sm-10
      %input.form-control#pass(name = "User[nickname]" placeholder = "Nickname" type = "text" maxlength="25" size="40" )
