    .col-sm-10
      %input.form-control#pass(name = "password" placeholder = "Password" type = "password" maxlength="25" size="40" )
  .form-group
    %label.col-sm-2.control-label(for = "email")Your email
    .col-sm-10
      %input.form-control#pass(name = "email" placeholder = "Email" type = "email" maxlength="25" size="40" )
