    %label.col-sm-2.control-label(for = "pass")Your password
    .col-sm-10
      %input.form-control#pass(name = "User[password]" placeholder = "Password" type = "password" maxlength="25" size="40" )
  .form-group
    %label.col-sm-2.control-label(for = "email")Your email
    .col-sm-10
      %input.form-control#pass(name = "User[email]" placeholder = "Email" type = "email" maxlength="25" size="40" )
  .form-group
    %label.col-sm-2.control-label(for = "phone")Your phone
    .col-sm-10
      %input.form-control#pass(name = "User[phone]" placeholder = "Your phone" type = "text" maxlength="25" size="40" )
