    %label.col-sm-2.control-label(for = "birthdate")Your birthdate
    .col-sm-10
      %input.form-control#pass(name = "birthdate" placeholder = "Birthdate" type = "text" maxlength="25" size="40" )
  .form-group
    %label.col-sm-2.control-label(for = "about")About
    .col-sm-10
      %input.form-control#pass(name = "about" placeholder = "About" type = "about" maxlength="25" size="40" )
